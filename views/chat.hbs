<script>
  $(function(){
    var socket = io();

    fetch("/user/profile")
      .then(r=>r.json())
      .then(data => {
        console.log(data);
        socket.emit("login", data);

        // Enabling the debug mode flag is useful during implementation,
        // but it's recommended you remove it for production
        mixpanel.init('{{data.mixpanelToken}}', {debug: true});
        mixpanel.track('Chat login', data);
      });

    socket.on("onlineList", function(data) {
      console.log(data);
      $("#numOfUsers").html("<strong>" + 'Users: ' + "</strong>" + data.map((user) => user.username));
    });

    socket.on("chat", function(data) {
      console.log(data);
      $("#chatLogs").append("<div>" + data.msg + "</div>");
    });

    $("form").submit(function(e) {
      e.preventDefault();
      var $msgForm = $("#msgForm");

      fetch("/chat", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          content: $msgForm.val(),
        })
      })
        .then(data => {
          $msgForm.val("");
        });
    });
  });
</script>
</body>
</html>
