  <script>
    $(function(){
      let socket = io();
      let myProfile = {};

      socket.on("onlineList", function(data) {
        console.log(data);
        const { id, provider } = myProfile;
        const buildUserLi = (user) =>
          (user.id === id && user.provider === provider)
            ? `<li><strong>${user.username}</strong><sup>*</sup></li>`
            : `<li>${user.username}</li>`;
        $("#numOfUsers").html(data.map((user) => buildUserLi(user)));
      });

      socket.on("chat", function(data) {
        console.log(data);
        const { id, provider } = myProfile;
        const chatStartEnd = (data.id === id && data.provider === provider) ? "chat-end" : "chat-start";
        $("#chatLogs").append(
          `<div class="chat ${chatStartEnd}"><div class="chat-header">${data.username}</div><div class="chat-bubble">${data.msg}</div></div>`
        );
      });

      fetch("/user/profile")
        .then((r) => r.json())
        .then((data) => {
          console.log(data);

          if (Object.keys(data).length === 0) {
            document.location.href = "/";
          }

          myProfile = data;
          socket.emit("login", data);

          // Enabling the debug mode flag is useful during implementation,
          // but it's recommended you remove it for production
          mixpanel.init("{{data.mixpanelToken}}", {debug: true});
          mixpanel.track("Chat login", data);

          amplitude.init("15866d48ec33d53a6c041384447faa95");
          amplitude.track("Chat login");
        });

      $("form").submit(function(e) {
        e.preventDefault();
        var $msgForm = $("#msgForm");

        fetch("/chat", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            content: $msgForm.val(),
          })
        })
          .then(data => {
            $msgForm.val("");
          });
      });
    });
  </script>
